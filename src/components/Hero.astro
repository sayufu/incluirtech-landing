<section class="flex flex-col items-center content-center center">
    <div class="flex flex-col gap-4 md:gap-12 max-w-6xl p-6 md:p-12">
        <h1 class="text-4xl md:text-6xl font-bold text-center">
            Connecting People With Disabilities To
            <span class="font-extrabold text-primary">
                Inclusive
            </span>
            Job Opportunities
        </h1>
        <div class="flex justify-center">
            <button id="button" class="w-1/2 md:w-1/4 inline-flex items-center justify-center gap-2 px-4 py-2 bg-secondary text-white font-medium rounded-lg transition duration-300 ease-in-out transform hover:scale-105">
                Learn more
                <ion-icon name="play-circle-outline" class="text-4xl"></ion-icon>
            </button>
        </div>
    </div>
    <div class="w-full h-96 md:h-[560px] overflow-hidden">
        <img src="/hero-image.jpg"
             alt="IncluirTech hero image"
             class="object-cover w-full h-full object-center"
             loading="lazy" decoding="async"
             sizes="(max-width: 640px) 100vw, (max-width: 1024px) 100vw, 1280px"
        />
    </div>

    <div id="defaultModal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative w-full md:w-2/3">
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                        We are <span class="text-primary font-bold">IncluirTech</span>
                    </h3>
                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="defaultModal">
                        <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                        <span class="sr-only">Close modal</span>
                    </button>
                </div>
                <div>
                    <div style="padding:56.25% 0 0 0;position:relative;">
                        <iframe
                                src="https://player.vimeo.com/video/1018387706?badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479"
                                frameborder="0" allow="autoplay; fullscreen; picture-in-picture; clipboard-write"
                                style="position:absolute;top:0;left:0;width:100%;height:100%;" title="IncluirTech">
                        </iframe>
                    </div>
                    <script src="https://player.vimeo.com/api/player.js"></script>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    import { Modal } from 'flowbite'

    const $buttonElement: HTMLElement | null = document.querySelector('#button');
    const $modalElement: HTMLElement | null = document.querySelector('#defaultModal');

    const modal = new Modal($modalElement);

    if ($buttonElement) {
        $buttonElement.addEventListener('click', () => modal.toggle());
    }
</script>